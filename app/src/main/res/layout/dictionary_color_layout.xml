<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    tools:context="com.healingtime.healingtime_designrenew.MainActivity">

    <LinearLayout
        android:id="@+id/aroma_color_select_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8CBF48"
        android:elevation="2dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/therapy_dictionary_aroma2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#83A54E">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Aroma"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            <View
                android:id="@+id/dictionary_view_aroma"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_height="2dp"
                android:background="#FFFFFF"
                android:visibility="invisible"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/therapy_dictionary_color2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#83A54E">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Color"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            <View
                android:id="@+id/dictionary_view_color"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_height="2dp"
                android:background="#FFFFFF" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="#F2F2F2"
        android:layout_below="@+id/aroma_color_select_btn"
        android:layout_above="@+id/dictionary_color_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/color_dictionary_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CF483E"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingTop="5dp"
                android:elevation="3dp"
                android:text="Red: 빨강"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/color_dictionary_red_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/color_dictionary_red"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="#717171"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/color_dictionary_orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/color_dictionary_red_contents"
                android:background="#D38029"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingTop="5dp"
                android:elevation="3dp"
                android:text="Orange : 주황"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/color_dictionary_orange_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/color_dictionary_orange"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="#717171"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/color_dictionary_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/color_dictionary_orange_contents"
                android:background="#D7CF01"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingTop="5dp"
                android:elevation="3dp"
                android:text="Yellow : 노랑"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/color_dictionary_yellow_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/color_dictionary_yellow"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="#717171"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/color_dictionary_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A2CE4A"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingTop="5dp"
                android:elevation="3dp"
                android:text="Green : 초록"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/color_dictionary_green_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/color_dictionary_green"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="#717171"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/color_dictionary_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#58CCF1"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingTop="5dp"
                android:elevation="3dp"
                android:text="Blue : 파랑"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/color_dictionary_blue_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/color_dictionary_blue"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="#717171"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/color_dictionary_purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#800080"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingTop="5dp"
                android:elevation="3dp"
                android:text="Purple: 보라"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/color_dictionary_purple_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="#717171"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/color_dictionary_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingTop="5dp"
                android:elevation="3dp"
                android:text="White: 흰색"
                android:textColor="#000000"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/color_dictionary_white_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="#717171"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/color_dictionary_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingTop="5dp"
                android:elevation="3dp"
                android:text="Black: 검정"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/color_dictionary_black_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="#717171"
                android:textSize="16dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/dictionary_color_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#82A44D">
        <LinearLayout
            android:id="@+id/link_color_therapy"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/light_bulb_white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_aroma_therapy"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/spray_white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_dictionary"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/open_magazine_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:text="테라피 사전"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_market"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/shopping_cart_white"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
