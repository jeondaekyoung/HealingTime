<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.healingtime.healingtime_designrenew.MainActivity"
    android:background="#F2F2F2">

    <LinearLayout
        android:id="@+id/aroma_remain_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="A구간"
                android:textColor="#717171"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <View
                    android:id="@+id/aroma_remaining_amount_a"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/aroma_remain_rate_background">
                </View>
                <View
                    android:id="@+id/aroma_remain_view_a"
                    android:layout_width="54dp"
                    android:layout_height="180dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/aroma_remain_rate">
                </View>
                <TextView
                    android:id="@+id/aroma_remaining_ml_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/aroma_remaining_amount_a"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:text="40ml"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="15dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/aroma_remaining_percent_a"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="90%"
                android:textColor="#717171"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/aroma_remain_modify_a"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_btn_gray"
                android:text="변경"
                android:gravity="center"
                android:textColor="#717171"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="B구간"
                android:textColor="#717171"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <View
                    android:id="@+id/aroma_remaining_amount_b"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/aroma_remain_rate_background">
                </View>
                <View
                    android:id="@+id/aroma_remain_view_b"
                    android:layout_width="54dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/aroma_remain_rate">
                </View>
                <TextView
                    android:id="@+id/aroma_remaining_ml_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/aroma_remaining_amount_b"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:text="14ml"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="15dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/aroma_remaining_percent_b"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="40%"
                android:textColor="#717171"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/aroma_remain_modify_b"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_btn_gray"
                android:text="변경"
                android:gravity="center"
                android:textColor="#717171"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="C구간"
                android:textColor="#717171"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <View
                    android:id="@+id/aroma_remaining_amount_c"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/aroma_remain_rate_background">
                </View>
                <View
                    android:id="@+id/aroma_remain_view_c"
                    android:layout_width="54dp"
                    android:layout_height="190dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/aroma_remain_rate">
                </View>
                <TextView
                    android:id="@+id/aroma_remaining_ml_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/aroma_remaining_amount_c"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:text="45ml"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="15dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/aroma_remaining_percent_c"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="95%"
                android:textColor="#717171"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/aroma_remain_modify_c"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_btn_gray"
                android:text="변경"
                android:gravity="center"
                android:textColor="#717171"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aroma_remain_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/aroma_remain_body">
        <Button
            android:id="@+id/aroma_remain_cancel"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/round_btn_green"
            android:gravity="center"
            android:text="확인"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>