<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/color_therapy_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.healingtime.healingtime_designrenew.MainActivity">

    <LinearLayout
        android:id="@+id/color_lightonoff_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:background="#FAFAFA">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="#F2F2F2">
           <ImageView
               android:id="@+id/color_light_imageview1"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/light_bulb_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/color_light_imageview1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="조명 설정"
                android:textSize="18dp"
                android:textColor="#111111"/>
            <View
                android:id="@+id/color_user_rgb"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toLeftOf="@+id/color_alarm_desc"
                android:layout_marginRight="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/color_custom_unchecked"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/color_alarm_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:text="무기력, 의기소침"
                android:textSize="18dp"
                android:textColor="#949494"/>
        </RelativeLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:id="@+id/color_toggle_group1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ToggleButton
                    android:id="@+id/color_red_toggle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="9dp"
                    android:button="@drawable/color_toggle_background_red" />
                <ToggleButton
                    android:id="@+id/color_orange_toggle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="9dp"
                    android:button="@drawable/color_toggle_background_orange"/>
                <ToggleButton
                    android:id="@+id/color_yellow_toggle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="9dp"
                    android:button="@drawable/color_toggle_background_yellow"/>
                <ToggleButton
                    android:id="@+id/color_green_toggle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="9dp"
                    android:button="@drawable/color_toggle_background_green"/>
                <ToggleButton
                    android:id="@+id/color_blue_toggle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="9dp"
                    android:button="@drawable/color_toggle_background_blue"/>
                <ToggleButton
                    android:id="@+id/color_purple_toggle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="9dp"
                    android:button="@drawable/color_toggle_background_purple"/>
                <ToggleButton
                    android:id="@+id/color_white_toggle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="9dp"
                    android:button="@drawable/color_toggle_background_white"/>
                <ToggleButton
                    android:id="@+id/color_custom_toggle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:button="@drawable/color_toggle_background_custom"/>
            </LinearLayout>
        </HorizontalScrollView>
        <RelativeLayout
            android:id="@+id/bright_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="밝기"
                android:textSize="16dp"
                android:textColor="#000000"/>
            <SeekBar
                android:id="@+id/color_direct_bright_seekbar"
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:progress="5"
                android:max="10"
                android:progressDrawable="@drawable/color_bright_seekbar_progress"/>
            <TextView
                android:id="@+id/color_direct_bright_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/seekbar_bright_value_percent"
                android:text="50"
                android:textSize="16dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/seekbar_bright_value_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="%"
                android:textSize="16dp"
                android:textColor="#000000"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/color_lightonoff_layout"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#F2F2F2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#F2F2F2"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/alarm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="예약 설정"
                android:textSize="18dp"
                android:textColor="#111111"/>
            <ImageButton
                android:id="@+id/color_alarm_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:padding="17dp"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:src="@drawable/add"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/color_alarm_layout_1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/color_alarm_layout"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:background="#FFFFFF"
            android:visibility="invisible">
            <View
                android:id="@+id/color_alarm_colortype_1"
                android:layout_width="4dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:background="#F71414"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/color_alarm_time_textview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오전 08:10 ~ 오전: 09:10"
                    android:textSize="18dp"
                    android:textColor="#111111"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/color_alarm_bright_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="밝기: 100%"
                        android:textSize="14dp"
                        android:textColor="#111111"/>
                    <TextView
                        android:id="@+id/color_alarm_week_sum_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="반복: 월~금"
                        android:textSize="14dp"
                        android:textColor="#111111"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/color_alarm_switch_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:theme="@style/SCBSwitch"
                    android:checked="true"/>
                <ImageButton
                    android:id="@+id/color_alarm_delete_btn_1"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/trash"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="#00000000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/color_alarm_layout_2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/color_alarm_layout"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:background="#F2F2F2"
            android:visibility="invisible">
            <View
                android:id="@+id/color_alarm_colortype_2"
                android:layout_width="4dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:background="#F71414"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/color_alarm_time_textview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오전 08:10 ~ 오전 09:10"
                    android:textSize="18dp"
                    android:textColor="#111111"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/color_alarm_bright_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="밝기: 100%"
                        android:textSize="14dp"
                        android:textColor="#111111"/>
                    <TextView
                        android:id="@+id/color_alarm_week_sum_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="반복: 월~금"
                        android:textSize="14dp"
                        android:textColor="#111111"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/color_alarm_switch_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:theme="@style/SCBSwitch"
                    android:checked="true"/>
                <ImageButton
                    android:id="@+id/color_alarm_delete_btn_2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/garbage"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="#00000000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/color_alarm_layout_3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/color_alarm_layout"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:background="#F2F2F2"
            android:visibility="invisible">
            <View
                android:id="@+id/color_alarm_colortype_3"
                android:layout_width="4dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:background="#F71414"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/color_alarm_time_textview_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오전 08:10 ~ 오전 09:10"
                    android:textSize="18dp"
                    android:textColor="#111111"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/color_alarm_bright_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="밝기: 100%"
                        android:textSize="14dp"
                        android:textColor="#111111"/>
                    <TextView
                        android:id="@+id/color_alarm_week_sum_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="반복: 월~금"
                        android:textSize="14dp"
                        android:textColor="#111111"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/color_alarm_switch_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:theme="@style/SCBSwitch"
                    android:checked="true"/>
                <ImageButton
                    android:id="@+id/color_alarm_delete_btn_3"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/garbage"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="#00000000"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/aroma_therapy_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#82A44D">
        <LinearLayout
            android:id="@+id/link_color_therapy"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/light_bulb_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:text="칼라 테라피"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_aroma_therapy"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/spray_white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_dictionary"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/open_magazine_white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_market"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/shopping_cart_white"/>
        </LinearLayout>
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/color_alarm_fab"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/color_alarm_layout"
        android:layout_alignRight="@+id/color_alarm_layout"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="25dp"
        android:elevation="5dp"
        android:src="@drawable/add_white_24x24"
        fab:fab_colorNormal="@color/fabPrimary"
        fab:fab_colorPressed="@color/fabPressed"
        fab:fab_colorRipple="@color/fabRipple"
        android:visibility="gone"/>

</RelativeLayout>
