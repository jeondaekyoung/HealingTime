<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healingtime.healingtime_designrenew">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/aroma_therapy"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:uiOptions="splitActionBarWhenNarrow"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name=".ColorMainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ColorMainTheme"/>
        <activity
            android:name=".ColorSettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ColorMainTheme"/>
        <activity
            android:name=".AromaMainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AromaMainTheme"/>
        <activity
            android:name=".AromaSettingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AromaMainTheme"/>
        <activity
            android:name=".AromaRemainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AromaMainTheme"/>
        <activity
            android:name=".AromaEditSearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AromaMainTheme"/>
        <activity
            android:name=".AromaEditSettingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AromaMainTheme"/>
        <activity
            android:name=".DictionaryAromaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AromaMainTheme"/>
        <activity
            android:name=".DictionaryColorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AromaMainTheme"/>
        <activity
            android:name=".DictionaryAromaDescriptionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AromaMainTheme"/>

    </application>

</manifest>