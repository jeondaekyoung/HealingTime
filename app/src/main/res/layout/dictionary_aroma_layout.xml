<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.healingtime.healingtime_designrenew.DictionaryAromaActivity"
    android:background="#EAEAEA">

    <LinearLayout
        android:id="@+id/dictionary_aroma_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:background="#8CBF48">
        <RelativeLayout
            android:id="@+id/therapy_dictionary_aroma1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#83A54E">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Aroma"
                android:textSize="18dp"
                android:textColor="#FFFFFF"/>
            <View
                android:id="@+id/dictionary_view_aroma"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_height="2dp"
                android:background="#FFFFFF" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/therapy_dictionary_color1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#83A54E">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Color"
                android:textSize="18dp"
                android:textColor="#FFFFFF"/>
            <View
                android:id="@+id/dictionary_view_color"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_height="2dp"
                android:background="#FFFFFF"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/aroma_listview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/dictionary_aroma_top"
        android:layout_above="@+id/dictionary_aroma_bottom"
        android:divider="#FAFAFA"
        android:dividerHeight="1dp"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"/>
    <LinearLayout
        android:id="@+id/dictionary_aroma_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#82A44D">
        <LinearLayout
            android:id="@+id/link_color_therapy"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/light_bulb_white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_aroma_therapy"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/spray_white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_dictionary"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/open_magazine_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:text="테라피 사전"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_market"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/shopping_cart_white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
